{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./",
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "ES2018",
    "jsx": "preserve",
    "allowJs": true,
    "noEmit": false,
    "moduleResolution": "Node",
    "typeRoots": ["./node_modules/@types"],
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js"],
  "exclude": ["./node_modules", "./build"],
  "files": ["index.d.ts"],
  "compileOnSave": true
}
